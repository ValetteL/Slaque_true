<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0">
    <script src="{{ asset ('js/jquery.js') }}"></script>
    <script src="{{ asset ('js/popper.js') }}"></script>
    <script src="{{ asset ('js/bootstrap.js') }}"></script>

    <title>{% block title %}Slaque{% endblock %}</title>

    {# on utilise asset() pour générer le bon chemin vers les fichiers .css, .js ou img ...#}
    <link rel="stylesheet" href="{{ asset ('css/bootstrap.css') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    {% block css %}{% endblock %}
</head>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
                <a class="navbar-brand" href="{{ path('home') }}"><img src="{{ asset ('img/logoslack.png') }}" width="13%"> Slaque</a>
                {# path() prend le 'name' des routes en argument #}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{  path('home') }}">Accueil</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{  path('user_logout') }}">Déconnexion ({{ app.user.username }})</a>
                        </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{  path('user_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{  path('user_register') }}">Inscription</a>
                    </li>
                    {% endif %}
                </ul>
            </nav>
        </header>
        <main>
            {% block main %}{% endblock %}
        </main>
        <footer class="footer">
{#            {{  "now"|date("Y") }}#}
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-bottom">
                {# path() prend le 'name' des routes en argument #}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                    </li>
                </ul>
            </nav>
        </footer>
        {% block modal %}{% endblock %}
    </div>
    {% block js %}{% endblock %}
</body>
</html>